<%= form_with(model: @comic, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="row"> 
      <div class="col-sm-3">
        <%= f.label :new, '新規投稿' %>
        <%= f.file_field :picture  %>
      </div>
      
      <div class="col-sm-9">
        <div class="row">
          <div class="col-sm-4">
            <%= f.label :tittle, 'タイトル' %>
            <%= f.text_field :tittle, class: 'form-control' %>
          </div>  
          <div class="col-sm-4">
            <%= f.label :author, '筆者' %>
            <%= f.text_field :author, class: 'form-control' %>
          </div>  
          <div class="col-sm-4">
            <%= f.label :price, '値段' %>
            <%= f.text_field :price, class: 'form-control' %>
          </div>  
        </div>
        <div class="row mt-4">
          <div class="col-sm-10"> 
            <%= f.label :review, 'レビュー' %>
            <%= f.text_area :review, class: 'form-control' %>
          </div>
          <div class="col-sm-2 d-flex align-items-end">
            <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
          </div>        
        </div>
      </div>
    </div>
<% end %>