<% if logged_in? %>
  <ul class="list-unstyled">
    <% @comics.each do |comic| %>
      <li class="media mb-3">
        <%= image_tag comic.picture, size: 150, class: "mr-2 rounded" if comic.picture.attached? %>
        <div class="media-body">
          <div>
            <%= comic.user.name %> <span class="text-muted">posted at <%= comic.created_at %></span>
          </div>
          <div>
            <table class="table">
              <tr>
                <th class="text-center">タイトル</th>
                <th class="text-center">筆者</th>
                <th class="text-center">値段</th>
              </tr>
              <tr>
                <td class="text-center"><%= comic.tittle %></td>
                <td class="text-center"><%= comic.author %></td>
                <td class="text-center"><%= comic.price %></td>
              </tr>
            </table>
          </div>
        </div>
        <div>
          <%= link_to "詳細", comic, class: 'btn btn-primary btn-sm' %>
          <div>
            <% if current_user == comic.user %>
              <%= link_to "削除", comic, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
              <br>
              <%= link_to "編集", edit_comic_path(comic), class: 'btn btn-secondary btn-sm' %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to Comic_review</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>